<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet"
          asp-href-include="/lib/twitter-bootstrap/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*"/>
    <link rel="stylesheet" asp-href-include="/lib/font-awesome/css/*.css"/>
</head>
<body>
<div class="navbar navbar-expand-sm navbar-dark bg-dark btn-dark">
    <div class="row">
        <a class="col navbar-brand" href="#">Sports Store</a>
        <div class="col-4 text-right">
            @await Component.InvokeAsync("CartSummer")
        </div>
    </div>

</div>
<div class="row m-1 p-1">
    <div id="categories" class="col-3">
        @await Component.InvokeAsync("NavigationMenu")
    </div>
    <div class="col-9">
        @RenderBody()
    </div>
</div>
</body>
</html>
